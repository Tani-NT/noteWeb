<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div class="w-full  min-h-screen text-white bg-zinc-900">
        <div class="form p-10">
            <form action="/create" method="post">
                <input class="block w-full rounded-md px-5 py-3 mb-4 bg-zinc-700" type="text" placeholder="Title goes here.." name="title" id="title">
                <textarea class="block resize-none rounded-md w-full mb-4 px-5 py-3 bg-zinc-700" placeholder="Write your description here.." name="description"></textarea>
                <input class="bg-blue-600 cursor-pointer px-4 py-2 rounded-md" type="submit" value="Create">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">

            <% if(files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-700">
                        <h1 class="text-[1.7vw] tracking-tighter"><%= val %></h1>
                        <div class="flex mt-3 items-center justify-between">
                            <a href="file/<%= val %>" class="inline-block text-[1.3vw] text-blue-600">Read More..</a>
                            <a href="/edit/<%= val %>" class="text-zinc-500 text-[1.3vw]">rename</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-600">no task yet.</h3>
            <% } %>
        </div>
    </div>
</body>
</html>